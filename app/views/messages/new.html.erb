<div class="row">

  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_for(@message) do |f| %>
      <div class="form-group"><label>Titulo:</label><%= f.text_field :title ,class: 'form-control'%></div>
      <div class="form-group"><label>Clave Secreta:</label><%= f.password_field :secret_key , class: 'form-control'%></div>
      <div class="form-group"><label>Mensaje:</label><%= f.text_field :content , class: 'form-control'%></div>
        <%= f.hidden_field :secret %>
        <%= f.submit "Create"%>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
