<h1> Mensajes </h1>
<center><a class="btn btn-success" href="messages/new" role="button">New Message</a>

<table class="table table-striped table-hover">
  <thead>
      <tr>
        <th># Mensaje</th>
        <th>Titulo</th>
				<th>Ver</th>
      </tr>
  </thead>
  <tbody>
    <% @messages.each do |m| %>
    <tr>
      <td><%= m.id %>
      <td><%= m.title %></td>
      <td><a class="btn btn-success" role= "button" href = "messages/<%= m.id %>">Ver</td>
    </tr>
    <% end %>
  </tbody>
</table>
</center>
